#!/usr/bin/env zsh

emulate -LR zsh
set -e
# set -x

_dir="$PWD"

# ROOTMARKERS=${ROOTMARKERS:-".git"}
ROOTMARKERS=(
    ".svn"
    ".git"
    ".root"
    ".project"
    ".hg"
    "_darcs"
    "build.xml"
    "Makefile"
    "CMakeLists.txt"
)

# echo "${ROOTMARKERS[@]}"

[[ $# -gt 0 ]] && ROOTMARKERS=$@

while [[ -n "$_dir" ]]; do
    for v in "${ROOTMARKERS[@]}"; do
        if [[ -e "$_dir/$v" ]]; then
            echo "$_dir"
            exit
        fi
    done
    _dir="${_dir%/*}"
done

echo "cannot find any of " "${ROOTMARKERS[@]}"
